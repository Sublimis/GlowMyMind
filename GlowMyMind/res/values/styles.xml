<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.    -->

    <style name="AppBaseTheme" parent="android:Theme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="GlowingActivityTheme" parent="android:Theme.NoTitleBar" >
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <color name="my_bg_color">#deecff</color>
    <color name="my_text_color">#212121</color>
    <color name="my_text_light_color">#7a7a7a</color>
    <color name="my_text_darklight_color">#6a6a6a</color>
    <color name="my_text_dark_color">#000000</color>

</resources>